{
  "name": "mce",
  "version": "0.3.3",
  "description": "Material Designed Custom Element",
  "main": "dist/mce.min.js",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "build": "npm-run-all clean build:js build:css",
    "build:js": "sh scripts/build-js.sh",
    "build:css": "ls src/*/style.css && uglifycss src/*/style.css > dist/mce.min.css",
    "build:doc": "sh scripts/jsdoc2md.sh && gitbook build",
    "serve:doc": "gitbook serve",
    "publish:doc": "gh-pages -d _book -r https://github.com/mymce/mymce.github.io.git -b master"
  },
  "repository": {
    "type": "git",
    "url": "https:/github.com/allenhwkim/custom-element"
  },
  "keywords": [
    "customElement",
    "material",
    "design",
    "html",
    "core"
  ],
  "files": [
    "dist"
  ],
  "author": "allenhwkim@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "jsdoc-to-markdown": "^3.0.2",
    "npm-run-all": "^4.1.2",
    "uglify-es": "^3.3.4",
    "uglifycss": "0.0.27",
    "webpack": "^3.10.0"
  }
}
