{
  "name": "@custom-elements/core",
  "version": "0.2.4",
  "description": "core components with MD/CE",
  "main": "dist/core.min.js",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "classes": "echo $(egrep -o 'class .* extends HTML' components/*/main.js | awk '{print $2}' | paste -sd',' -)",
    "package": "webpack components/index.js --output-filename=dist/core.js",
    "min-css": "uglifycss components/*/style.css > dist/core.css",
    "min-js": "uglifyjs dist/core.js -m reserved=[AppBar,BottomNavBar,Button,Card,Checkbox,Chip,Dialog,ExpansionPanel,GridList,Icon,List,Menu,NavDrawer,NavItem,RadioButton,RefreshIndicator,Switch,Tabs,TextField,Tooltip] -c > dist/core.min.js",
    "build": "npm-run-all clean min-css package min-js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/allenhwkim/custom-elements"
  },
  "keywords": ["customElement", "material", "design", "html", "core"],
  "files": [ "dist" ],
  "author": "allenhwkim@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "npm-run-all": "^4.1.1",
    "uglify-es": "^3.1.7",
    "uglifycss": "0.0.27",
    "webpack": "^3.8.1"
  }
}
