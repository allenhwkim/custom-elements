{
  "name": "mce",
  "version": "0.4.8",
  "description": "Material Designed Custom Element",
  "main": "dist/mce.min.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm-run-all clean build:js build:css",
    "build:js": "webpack src/index.js --output-filename=dist/mce.js && uglifyjs dist/mce.js -m -c > dist/mce.min.js ",
    "build:css": "ls src/*/style.css && cat src/*/style.css > dist/mce.css && uglifycss dist/mce.css > dist/mce.min.css && cp -r src/themes dist",
    "build:doc": "sh docs/jsdoc2md.sh && cp -r src/themes docs && gitbook build",
    "start": "http-serve",
    "publish:doc": "gh-pages -d _book -r https://github.com/mymce/mymce.github.io.git -b master"
  },
  "repository": {
    "type": "git",
    "url": "https:/github.com/allenhwkim/custom-element"
  },
  "keywords": [
    "customElement",
    "material",
    "design",
    "html",
    "core"
  ],
  "files": [
    "dist"
  ],
  "author": "allenhwkim@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "gitbook-plugin-github-buttons": "^3.0.0",
    "gitbook-plugin-scripts": "^1.0.2",
    "http-serve": "^1.0.1",
    "jsdoc-to-markdown": "^3.0.2",
    "npm-run-all": "^4.1.2",
    "uglify-es": "^3.3.4",
    "uglifycss": "0.0.27",
    "webpack": "^3.10.0"
  }
}
