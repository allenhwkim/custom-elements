{
  "name": "@custom-element/core",
  "version": "0.2.28",
  "description": "core elements with MD/CE",
  "main": "dist/ce-core.min.js",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "classes": "echo $(egrep -o 'class .* extends HTML' elements/*/*.js elements/*/src/*.js | awk '{print $2}' | paste -sd',' -)",
    "package": "webpack index.js --output-filename=dist/mce.js",
    "min-css": "ls ../*/style.css && uglifycss ../*/style.css > dist/style.css",
    "min-js": "uglifyjs dist/ce-core.js -m reserved=[AppBar,BottomNavBar,Button,Card,Checkbox,Chip,Dialog,ExpansionPanel,GridList,Icon,List,Menu,NavDrawer,NavItem,RadioButton,RefreshIndicator,Search,Switch,Tabs,TextField,Tooltip,LeafletMap,LeafletMarker,Route,Router] -c > dist/mce.min.js",
    "build": "npm-run-all clean min-css package min-js",
    "jsdoc2md": "rm -rf jsdoc2md && sh jsdoc2md.sh",
    "doc": "npm-run-all doc:run doc:build doc:serve",
    "doc:build": "gitbook build",
    "doc:serve": "gitbook serve",
    "doc:publish": "rm -rf node_modules/gh-pages/.cache && npm run doc:build && gh-pages -d _book",
    "build-and-publish": "npm run build && npm version patch && npm publish --access=public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/allenhwkim/custom-element"
  },
  "keywords": [
    "customElement",
    "material",
    "design",
    "html",
    "core"
  ],
  "files": [
    "dist"
  ],
  "author": "allenhwkim@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "jsdoc-to-markdown": "^3.0.2",
    "npm-run-all": "^4.1.2",
    "uglify-es": "^3.1.7",
    "uglifycss": "0.0.27",
    "webpack": "^3.8.1"
  }
}
