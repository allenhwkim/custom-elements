{
  "name": "@custom-elements/icon",
  "version": "0.2.0",
  "description": "icon with MD/CE",
  "main": "dist/main.min.js",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "package": "webpack main.js --output-filename=dist/_main.js",
    "package-with-polyfill": "cat ../ce-polyfill.js dist/_main.js > dist/main.js",
    "min-css": "uglifycss style.css > dist/style.css",
    "min-js": "uglifyjs dist/main.js -m reserved=[Icon] -c > dist/main.min.js",
    "build": "npm-run-all clean min-css package package-with-polyfill min-js && rm dist/_main.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/allenhwkim/custom-elements/components/icon"
  },
  "keywords": [
    "customElement",
    "material",
    "design",
    "html"
  ],
  "files": [ "dist" ],
  "author": "allenhwkim@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "npm-run-all": "^4.1.1",
    "uglify-es": "^3.1.7",
    "uglifycss": "0.0.27",
    "webpack": "^3.8.1"
  }
}
